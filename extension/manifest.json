{
  "manifest_version": 3,
  "name": "PhishWatch (Dev)",
  "version": "0.1.0",
  "description": "Runtime phishing signals + explainable overlay.",

  "permissions": ["scripting", "storage"],

  "host_permissions": [
    "http://127.0.0.1:*/*",
    "http://localhost:*/*",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["pw-net-hook.js", "pw-nav-hook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
