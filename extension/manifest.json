{
  "manifest_version": 3,
  "name": "PhishWatch (Dev)",
  "version": "0.1.0",
  "description": "Runtime phishing signals + explainable overlay.",

  "permissions": [
    "scripting"
  ],

  "host_permissions": [
    "http://127.0.0.1:8080/*",
    "http://localhost:8080/*",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
